		ft_lstswap.c \
		ft_lstsort.c \
		get_next_line.c \
		ft_memdup.c \
		ft_lstaddfront.c

OBJS = $(SRCS:.c=.o)

$(NAME): $(OBJS)
	ar rc $(NAME) $(OBJS)
	ranlib $(NAME)

all: $(NAME)

%.o: %.c
	clang $(FLAGS) -o $@ $< -I ../includes/

clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(NAME)

re: fclean all
