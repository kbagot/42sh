NAME = libft.a

FLAGS = -c -Wall -Werror -Wextra

SRCS = ft_atoi.c \
		ft_nlen.c \
		ft_bzero.c \
		ft_isalpha.c \
		ft_isblank.c \
		ft_ispunct.c \
		ft_isascii.c \
		ft_lstrev.c \
		ft_strsub.c \
		ft_isdigit.c \
		ft_isprint.c \
		ft_isspace.c \
		ft_isalnum.c \
		ft_memcmp.c \
		ft_memchr.c \
		ft_memcpy.c \
		ft_memmove.c \
		ft_memset.c \
		ft_strcat.c \
		ft_strchr.c \
		ft_strcmp.c \
		ft_strcpy.c \
		ft_strdup.c \
		ft_strlcat.c \
		ft_strlen.c \
		ft_strncat.c \
		ft_strncmp.c \
		ft_strncpy.c \
		ft_strrchr.c \
		ft_tolower.c \
		ft_toupper.c \
		ft_itoa.c \
		ft_putstr.c \
		ft_putchar.c \
		ft_putnbr.c \
		ft_perror.c \
		ft_islower.c \
		ft_isupper.c \
		ft_memccpy.c \
		ft_strnstr.c \
		ft_strstr.c \
		ft_strnew.c \
		ft_strnequ.c \
		ft_strequ.c \
		ft_strmap.c \
		ft_strmapi.c \
		ft_striter.c \
		ft_striteri.c \
		ft_strclr.c \
		ft_strdel.c \
		ft_memdel.c \
		ft_memalloc.c \
		ft_putendl_fd.c \
		ft_putendl.c \
		ft_putnbr_fd.c \
		ft_putchar_fd.c \
		ft_putstr_fd.c \
		ft_segcount.c \
		ft_strjoin.c \
		ft_strtrim.c \
		ft_seglen.c \
		ft_strsplit.c \
		ft_lstadd.c \
		ft_lstdel.c \
